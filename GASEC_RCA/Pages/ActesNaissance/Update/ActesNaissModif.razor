									<td><p><div class="text-field-container"><MudTextField @bind-Value="@objActesNaissance.ACT_HEURE_NAISS" Label="Heure Naissance" FullWidth="true"></MudTextField></div></p></td>
									<td><p><div class="text-field-container"><MudTextField @bind-Value="@objActesNaissance.PERS_LIEU_NAISS" Label="Lieu Naissance" FullWidth="true"></MudTextField></div></p></td>
									
